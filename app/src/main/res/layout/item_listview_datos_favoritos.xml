<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    >

    <TextView
        android:id="@+id/tv_nombre_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre restaurante"
        android:layout_marginBottom="12dp"
        android:textSize="25dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_descripcion_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion restaurante"
        android:layout_marginBottom="12dp"
        android:fontFamily="serif"
        />

    <ImageView
        android:id="@+id/imagen_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:layout_marginBottom="12dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@id/btn_eliminar_favoritos"
            android:text="Quitar de favoritos" />

        <ImageButton
            android:id="@+id/btn_eliminar_favoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/corazon" />
    </RelativeLayout>


</LinearLayout>