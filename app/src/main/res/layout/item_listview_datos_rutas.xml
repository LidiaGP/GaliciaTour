<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    >

    <TextView
        android:id="@+id/tv_nombre_ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre ruta"
        android:layout_marginBottom="12dp"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_descripcion_ruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion ruta"
        android:layout_marginBottom="12dp"
        android:textSize="13sp"
        android:fontFamily="serif"
        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="285dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dificultad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificicultad"
            android:layout_marginRight="12dp"
            android:textSize="12sp"
            android:fontFamily="serif"

            />
        <TextView
            android:id="@+id/tv_tiempo_transcurrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:layout_marginRight="12dp"
            android:textSize="12sp"
            android:fontFamily="serif"
            />
        <TextView
            android:id="@+id/tv_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia"
            android:layout_marginRight="12dp"
            android:textSize="12sp"
            android:fontFamily="serif"
            />

    </LinearLayout>


</LinearLayout>